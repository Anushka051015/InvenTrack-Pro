{
  "name": "InvenTrack Pro Workspace",
  "version": "1.0.0",
  "description": "Development workspace configuration for InvenTrack Pro",
  "scripts": {
    "dev": "npm run dev",
    "build": "npm run build",
    "test": "npm run test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "environmentSetup": {
    "nodejs": "20.x",
    "typescript": "5.x",
    "database": "PostgreSQL",
    "vite": "4.x"
  },
  "devDependencies": {
    "eslint": "^8.38.0",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4"
  },
  "workspaceSettings": {
    "editorSettings": {
      "tabSize": 2,
      "insertSpaces": true,
      "detectIndentation": true,
      "formatOnSave": true
    },
    "terminalSettings": {
      "defaultProfile": "bash",
      "fontSize": 14
    },
    "fileExplorer": {
      "exclude": [
        "node_modules",
        "dist",
        ".git",
        "*.log"
      ]
    }
  }
}